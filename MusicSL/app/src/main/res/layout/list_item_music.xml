<?xml version="1.0" encoding="utf-8"?>
<com.balysv.materialripple.MaterialRippleLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ripple"
    app:mrl_rippleColor="@color/grey"
    app:mrl_rippleRoundedCorners="10dp"
    app:mrl_rippleOverlay="true"
    app:mrl_rippleAlpha="0.3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/list_item_music_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
        android:layout_marginTop="5dp"
        android:background="@color/transport"
        android:layout_alignParentRight="true"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_music_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_music_check_box"
        android:textStyle="bold"
        tools:text="Music Nmae"
        android:padding="4dp"/>

    <TextView
        android:id="@+id/list_item_music_auth_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/list_item_music_check_box"
        android:layout_below="@id/list_item_music_title_text_view"
        tools:text="author"
        android:padding="4dp"/>
    
</RelativeLayout>
</com.balysv.materialripple.MaterialRippleLayout>